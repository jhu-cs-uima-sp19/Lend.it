    <EditText
        android:id="@+id/depositET"
        android:layout_width="128dp"
        android:layout_height="71dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="numberDecimal"
        android:textColorLink="@color/green"
        android:textCursorDrawable="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/depositTxt"
        app:layout_constraintTop_toBottomOf="@+id/lendDescriptionET" />

    <TextView
        android:id="@+id/depositTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="Deposit Amount (optional)"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/depositET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lendDescriptionET" />

    <ImageView
        android:id="@+id/displayIV"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depositTxt" />
